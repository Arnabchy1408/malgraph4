<p>
	<a class="close"><i class="icon-close"></i></a>
	Franchises consiting of at least two titles:

	<?php if (!empty($viewContext->franchises)): ?>
		&nbsp;(<?php echo count($viewContext->franchises) ?>)
	<?php endif ?>
</p>

<?php if (empty($viewContext->franchises)): ?>
	<p>None!</p>
<?php elseif ($viewContext->isPrivate): ?>
	<p>Can&rsquo;t show you titles from a private list.</p>
<?php else: ?>
	<ol class="franchises">
		<?php foreach ($viewContext->franchises as $franchise): ?>
			<li>
				<?php foreach ($franchise->ownEntries as $entry): ?>
					<a target="_blank" href="<?php echo $entry->mal_link ?>">
						<?php echo htmlspecialchars($entry->title) ?>
					</a>
					<span class="details">&nbsp;
						(<?php if ($viewContext->media == Media::Anime): ?>
							<?php echo TextHelper::getEpisodesText($entry->episodes ?: $entry->finished_episodes . '+', true) ?>
						<?php elseif ($viewContext->media == Media::Manga): ?>
							<?php echo TextHelper::getChaptersText($entry->chapters ?: $entry->finished_chapters . '+', true) ?>
						<?php endif ?>,&nbsp;
						<?php echo $entry->score ? 'rated with ' . $entry->score : 'unrated' ?>)
					</span><br>
				<?php endforeach ?>
				<span class="details">(<?php echo count($franchise->ownEntries) ?> titles,&nbsp;
					<?php if ($franchise->meanScore): ?>
						mean score: <?php printf('%.02f', $franchise->meanScore) ?>
					<?php else: ?>
						none rated
					<?php endif ?>
				)</span>
			</li>
		<?php endforeach ?>
	</ol>
<?php endif ?>
